<div class="container">
  <div class="row">
    <h3 class="col-auto mt-4 ml-5">管理者ログイン</h3>
  </div>

  <div class="row">
    <div class="col d-flex align-items-center justify-content-center">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-3 ">
          <label for="email">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'col' %>
        </div>

        <div class="field">
          <label for="pass">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password",class: 'col' %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン",class: 'col-6 mx-auto btn btn-primary mt-5 sign_in'%>
        </div>
      <% end %>

    </div>
  </div>
</div>