<%= flash[:customer_information_update] %>
<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10 col-offset-1">
      <h4 class="my-3 px-4 bg-light font-weight-bold"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
      <table class="table">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_reading %>　<%= @customer.first_name_reading%></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><% if @customer.is_deleted == true %>
                  退会
                <% else %>
                  有効
                <% end %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>　　<%= link_to "注文履歴一覧を見る", order_path, class:"btn btn-info" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>