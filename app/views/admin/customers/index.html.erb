<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10 col-offset-1">
      <h4 class="my-3 px-4 bg-light font-weight-bold">会員一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td><% if customer.is_deleted == true %>
                  退会
                <% else %>
                  有効
                <% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>