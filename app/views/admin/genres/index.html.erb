<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h3 class="genre-head">ジャンル一覧・追加</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <div>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class: "btn btn-primary genre_btn" %>
          </div>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <table class="table table-striped">
        <tr><td>ジャンル</td></tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
        </tr>
      　<% end %>
      </table>
   </div>
 </div>      
</div>

