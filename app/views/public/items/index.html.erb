<h1>商品一覧<h1>

<!--<strong> 全< %= @itmes.count %>件 </strong>-->

 <% @items.each do |item| %>
  <div class="list-item">
      <%= link_to items_path(items) do %>
      <%= attachment_image_tag items, :image, fallback: 'no_image.jpg',size: "190x150" %><br>
      <% end %>
      <%= items.name %><br>
      ¥<%= items.price%>(税込)
   </div>
<% end %>