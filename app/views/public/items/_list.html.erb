<div class="row">
  <% items.each do |item| %>
    <div class="m-2">
    <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_item_image2(200, 200) %>
    <% end %><br>
    <%= link_to item.name, item_path(item.id), class: "font-weight-bold" %><br>
      <%= number_to_currency(item.with_tax_price, unit: "円", precision: 0) %>（税込）
    </div>
  <% end %>
</div>
<%= paginate items, theme: 'bootstrap-5' %>