<div class="container">
  <div class="row">
    <h2 class="col-5 mt-5 mb-5">注文履歴一覧</h2>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="text-center table-active">注文日</th>
          <th class="text-center table-active">配送先</th>
          <th class="text-center table-active">注文商品</th>
          <th class="text-center table-active">支払金額</th>
          <th class="text-center table-active">ステータス</th>
          <th class="text-center table-active">注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="text-center align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.post_code.to_s.insert(3, "-") %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td class="text-center align-middle">
              <% order.order_items.each do |order_detail| %>
                <%= link_to order_detail.item.name,item_path(order_detail.item) %><br>
              <% end %>
            </td>
            <td class="text-center align-middle"><%= order.total_price.to_s(:delimited) %>円</td>
            <td class="text-center align-middle"><%= order.status_i18n %></td>
            <td class="text-center align-middle"><%= link_to "表示する", order_path(order), class: "btn btn-primary"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

  </div>
</div>