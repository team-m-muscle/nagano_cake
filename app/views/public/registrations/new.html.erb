<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10 col-offset-1">
      <h5 class="my-3 px-4 bg-secondary">新規会員登録</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table">
          <tbody>
            <tr>
              <td>名前</td>
              <td>(姓)</td>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
              <td>(名)</td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>(セイ)</td>
              <td><%= f.text_field :last_name_reading, autofocus: true, autocomplete: "last_name_reading" %></td>
              <td>(メイ)</td>
              <td> <%= f.text_field :first_name_reading, autofocus: true, autocomplete: "first_name_reading" %></td>
            </tr>
           <tr>
              <td>メールアドレス</td>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td></td>
              <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td>住所</td>
              <td></td>
              <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td></td>
              <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
              <td></td>
              <td></td>
            </tr>
              <tr>
              <td>パスワード(6文字以上)</td>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
        <h5 class="my-3 px-4 bg-secondary">すでに登録済みの方</h5>
        <p><%= render "public/shared/links" %>からログインしてください</p>
      <% end %>
    </div>
  </div>
</div>