      <h3>配送先登録/一覧</h3>
    </div>
  </div>
  <div class="row">

    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @shipping_address, local:true do |f| %>
      <table>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :post_code %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"宛名" %></th>
          <td><%= f.text_field :name %></td>
        　<td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </div>
        </tr>
      </table>
      <% end %>
    </div>

    <div class="row">
      <div class="col-sm-10 px-sm-0 mx-auto">
        <table class="table table-bordered">
          <thead class="table-active">
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
          <% @shipping_addresses.each do |shipping_address| %>
            <tr>
              <td><%= shipping_address.post_code %></td>
              <td><%= shipping_address.address %></td>
              <td><%= shipping_address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(shipping_address), class:"btn btn-success" %>
                <%= link_to "削除する", shipping_address, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>