  <div class="row">

    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: shipping_address, local:true do |f| %>
      <table>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :post_code %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"宛名" %></th>
          <td><%= f.text_field :name %></td>
        　<td><%= f.submit "新規登録", class:"btn btn-success" %></td>
        </div>
        </tr>
      </table>
      <% end %>
    </div>