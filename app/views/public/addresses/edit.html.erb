<h3>配送先編集</h3>
<%= flash[:notice] %>
  <div class="row">

    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @shipping_address, local:true do |f| %>
      <table>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :post_code, class: "form-control", style: "width: 200px;" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, class: "form-control", style: "width: 400px;" %></td>
        </div>
        </tr>
        <tr>
        <div calss="form-group">
          <th><%= f.label :"宛名" %></th>
          <td><%= f.text_field :name, class: "form-control", style: "width: 200px;" %></td>
        　<td><%= f.submit "変更内容を保存する", class:"btn btn-success" %></td>
        </div>
        </tr>
      </table>
      <% end %>
    </div>