<table class="table">
  <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tbody>
    <% cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.item_image , size: "50x50" %>
        <%= cart_item.item.name %>
      </td>
      <td><%= number_to_currency(cart_item.item.price * 1.1, precision: 0, unit: "") %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= number_to_currency(cart_item.item.price * 1.1 * cart_item.quantity, precision: 0, unit: "") %> </td>
    </tr>
    <% end %>
  </tbody>
</table>